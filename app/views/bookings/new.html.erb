<div class="container">
  <%= link_to skills_path do %>
    <i class="fas fa-chevron-circle-left"> Back </i>
  <% end %>
  <div class="view-card my-3">
    <%= image_tag @skill.user.picture, class: "avatar-bordered", alt: "avatar-bordered" %>
    <h3>Make a booking with <%= @skill.user.first_name %></h3>
    <p><strong>Available Times:</strong></p>
    <%= @skill.earliest_available.strftime("%I:%M:%S %p") %> -- <%= @skill.latest_available.strftime("%I:%M:%S %p") %>
    <div class="booking-form mt-3">
      <%= simple_form_for [@skill, @booking] do |f| %>
        <%= f.input :address %>
        <%= f.input :start_time %>
        <%= f.input :end_time %>
        <%= f.input :contact_info %>
        <%= f.submit "Book Now!", class:"btn btn-flat" %>
      <% end %>
    </div>
  </div>
</div>